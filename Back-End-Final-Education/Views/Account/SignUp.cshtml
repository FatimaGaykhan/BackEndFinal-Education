@model RegisterVM

<div style="display:flex; justify-content:center; margin-top:40px;" >
    <div style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 300px;">
        <h2 style="text-align: center; margin-bottom: 20px;">Kayıt Ol</h2>
        <div class="text-danger" asp-validation-summary="ModelOnly">

        </div>
        <form method="post" asp-controller="Account" asp-action="SignUp">
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px;">Username:</label>
                <input autocomplete="off" asp-for="UserName" type="text" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
                <span class="text-danger" asp-validation-for="UserName"></span>

            </div>
            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px;">FullName:</label>
                <input autocomplete="off" asp-for="FullName" type="text" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
                <span class="text-danger" asp-validation-for="FullName"></span>

            </div>

            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px;">Email:</label>
                <input autocomplete="off" asp-for="Email" type="text" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
                <span class="text-danger" asp-validation-for="Email"></span>

            </div>

            <div style="margin-bottom: 15px;">
                <label style="display: block; margin-bottom: 5px;">Şifre:</label>
                <input autocomplete="off" asp-for="Password" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
                <span class="text-danger" asp-validation-for="Password"></span>

            </div>
            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 5px;">Şifreyi Onayla:</label>
                <input autocomplete="off" asp-for="ConfirmPassword" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" style="width: 100%; padding: 10px; background-color: #28a745; border: none; border-radius: 4px; color: white; font-size: 16px;">Sign Up</button>
        </form>
    </div>
</div>



