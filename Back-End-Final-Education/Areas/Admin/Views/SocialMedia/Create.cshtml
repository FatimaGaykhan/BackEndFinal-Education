@model SocialMediaCreateVM
<div class="container">

    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Vertical Form</div>
                    <hr>
                    <form method="post" asp-action="Create" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="input-1">Social Media</label>
                            <input asp-for="Name" class="form-control" id="input-1" maxlength="100" placeholder="Title...">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="input-1">Icon Class</label>
                            <input asp-for="Icon" class="form-control" id="input-1" maxlength="100" placeholder="Subject...">
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>
                      


                        <div class="form-group">
                            <button type="submit" class="btn btn-light px-5"> Submit</button>
                            <a class="btn btn-light px-5" asp-action="Index"> Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--End Row-->
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>


