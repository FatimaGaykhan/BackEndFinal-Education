@model InstructorSocialMediaVM
<div class="container">
    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Vertical Form</div>
                    <hr>
                    <form method="post" asp-action="AddSocial" enctype="multipart/form-data">


                        <div class="form-group">
                            <label for="input-1">SocialMedia</label>
                            <select asp-for="SocialMediaId" asp-items="@ViewBag.socialMedias" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label for="input-1">Link</label>
                            <input asp-for="Link" class="form-control" id="input-1">
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-light px-5"> Submit</button>
                            <a class="btn btn-light px-5" asp-action="Index"> Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--End Row-->
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>

