@model CourseDetailVM

@foreach (var item in Model.Images)
{
    <img style="width: 200px; @(item.IsMain ?"border:5px solid red":"")  " src="~/assets/img/@item.Image" class="card-img-top" alt="...">
}
<div class="card-group">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Course: @Model.Name</h5>
            <p class="card-text">Instructor: @Model.Instructor</p>
            <p class="card-text">Category: @Model.Category</p>
            <p class="card-text">Price: @Model.Price</p>
            <p class="card-text">EndDate: @Model.EndDate</p>
            <p class="card-text">StartDate: @Model.StartDate</p>
            <p class="card-text">Rating: @Model.Rating</p>
            <p class="card-text">Student Count: @Model.StudentCount</p>






        </div>
        <div class="card-footer">
            <small class="text-muted text-danger" style="">Price:@Model.Price</small>
        </div>
    </div>

</div>

<a class="btn btn-light px-5" asp-action="Index">Back</a>

